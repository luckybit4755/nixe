#!/bin/bash

export NODE_PATH=/usr/lib/nodejs:/usr/lib/node_modules:/usr/share/javascript
alias gt='gnome-terminal'

set_title() {
	echo -e "\033]0;" ${*} "\007"; 
}

_export() {
	set -o vi
	export PATH=${HOME}/bin:/opt/local/bin:/opt/local/sbin:/sbin:/usr/sbin:${PATH}:/usr/local/maven/bin:${HOME}/.local/bin
	export DISPLAY=:0
	export PS1="\h:\W[\t]: "

	export VISUAL="vim"
	export EDITOR="vim"

	export NO_TEST="-Dmaven.test.skip=true"
	export HISTFILESIZE="50000"
}

_source_em() {
	local directory=${1}
	if [ -d ${directory} ] ; then
		local script
		for script in ${directory}/* ; do
			source ${script}
		done
	fi
}

_aliases() {
	_source_em ~/bin/alias.d
	_source_em ~/bin/funk.d
}

_setup() {
	_export 
	_aliases
}

_setup

export PATH="/opt/local/bin:/opt/local/sbin:$PATH"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
